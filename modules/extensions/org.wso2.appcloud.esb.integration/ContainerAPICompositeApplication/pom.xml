            <groupId>org.wso2.appcloud.esb.integration.ContainerAPIRegistry.resource</groupId>
            <artifactId>ProxyDataMapperArr_inputSchema</artifactId>
            <version>1.0.0</version>
            <type>zip</type>
        </dependency>
