        </dependency>
        <dependency>
            <groupId>org.wso2.appcloud.esb.integration.ContainerAPIRegistry.resource</groupId>
            <artifactId>ProxyDataMapper</artifactId>
            <version>1.0.0</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.wso2.appcloud.esb.integration.ContainerAPIRegistry.resource</groupId>
            <artifactId>ProxyDataMapperArr</artifactId>
